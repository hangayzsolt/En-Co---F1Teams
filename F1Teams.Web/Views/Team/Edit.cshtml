@model F1Teams.Models.DTOs.TeamDto

@{
    ViewBag.Title = "Edit team";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Team", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-3 col-form-label" })
        @Html.TextBoxFor(m => m.Name, new { placeholder = "Team name", @class = "form-control col-md-3" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.FoundationYear, new { @class = "col-md-3 col-form-label" })
        @Html.EditorFor(m => m.FoundationYear, new { htmlAttributes = new { @class = "form-control col-md-3", placeholder = "1950", min = "1900", max = DateTime.Now.Year.ToString() } })
        @Html.ValidationMessageFor(model => model.FoundationYear, "", new { @class = "text-danger" })
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.WonChampionsTitle, new { @class = "col-md-3 col-form-label" })
        @Html.EditorFor(m => m.WonChampionsTitle, new { htmlAttributes = new { @class = "form-control col-md-3", placeholder = "0", min = "0", max = "100" } })
        @Html.ValidationMessageFor(model => model.WonChampionsTitle, "", new { @class = "text-danger" })
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.IsEntryFeePayed, new { @class = "col-form-label col-md-3" })
        <div class="form-check form-check-inline">
            @Html.CheckBoxFor(m => m.IsEntryFeePayed, new { @class = "form-check-input col-md-2" })
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-md-3 col-md-9">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
}
